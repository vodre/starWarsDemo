<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vodrex.starwarsdemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.vodrex.starwarsdemo.view.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vodrex.starwarsdemo.view.CharactersListActivity"
            android:label="@string/title_activity_characters_list"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="com.vodrex.starwarsdemo.view.DetailsActivity"
            android:label="@string/title_activity_characters_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>